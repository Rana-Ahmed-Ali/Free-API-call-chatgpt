# save_auth.py
from playwright.sync_api import sync_playwright

def run():
    with sync_playwright() as p:
        # Launch visible browser so you can log in
        browser = p.chromium.launch(headless=False)
        context = browser.new_context()
        page = context.new_page()
        page.goto("https://chatgpt.com/")
        
        print("ACTION: Log in manually to ChatGPT now.")
        input("Press ENTER here only AFTER you are logged in and see the chat input box...")
        
        # Save cookies and local storage to a file
        context.storage_state(path="auth.json")
        print("Done! 'auth.json' created. You can close the browser.")
        browser.close()

if __name__ == "__main__":
    run()